{{>_header}}
<section class="container">
  <div class="content">
    <h1>{{contact.name}}</h1>
    <div>{{contact.description}}</div>
  </div>
  <div class="content text-light bg-secondary rounded p-2">
    <div class="row">
      <div class="col-6">
        <div><span class="fas fa-envelope fa-fw"></span> {{contact.email}}</div>
        <div><span class="fas fa-mobile fa-fw"></span> {{contact.phone}}</div>
      </div>
      <div class="col-6">
        <div><span class="fab fa-skype fa-fw"></span> {{contact.skype}}</div>
        <div><span class="fas fa-birthday-cake fa-fw"></span> {{contact.dob}}</div>
      </div>
    </div>
  </div>
</section>
<section class="container">
  <h2>Profile</h2>
  <div class="content">
    {{bio}}
  </div>
</section>
<section class="container">
  <h2>Skills</h2>
  <div class="content">
    {{#each skills}}
    <span class="badge badge-secondary">{{this}}</span>
    {{/each}}
  </div>
</section>
<section class="container">
  <h2>Experience</h2>
  <div class="content">
    {{#each experience}}
    {{>item_experience this}}
    {{/each}}
  </div>
</section>
<section class="container">
  <h2>Education</h2>
  <div class="content">
    {{#each education}}
    {{>item_education this}}
    {{/each}}
  </div>
</section>
{{>_footer}}